@model MVC_HotelBooking.Models.DichVu

@{
    ViewData["Title"] = "Xóa Dịch Vụ";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa dịch vụ này?</h3>

<div>
    <strong>Kiểu Dịch Vụ:</strong> @Model.KieuDichVu<br />
    <strong>Giá:</strong> @Model.Gia<br />
    <strong>Ảnh:</strong> <img src="@Model.ImageUrl" alt="Image" width="100" />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index", "DichVu")" class="btn btn-secondary">Hủy</a>
</form>