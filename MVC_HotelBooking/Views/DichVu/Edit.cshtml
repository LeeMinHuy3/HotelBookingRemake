@model MVC_HotelBooking.Models.DichVu

@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
}

<h2>Chỉnh sửa dịch vụ</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaDV" />
    <div class="form-group">
        <label asp-for="KieuDichVu"></label>
        <input asp-for="KieuDichVu" class="form-control" />
        <span asp-validation-for="KieuDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
