@model MVC_HotelBooking.ViewModel.LoaiPhongViewModel
@{
    ViewData["Title"] = "Xóa loại phòng";
    Layout = "_Layout_Admin";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa loại phòng sau?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-3">Mã loại phòng</dt>
    <dd class="col-sm-9">@Model.MaLP</dd>

    <dt class="col-sm-3">Tên loại phòng</dt>
    <dd class="col-sm-9">@Model.TenLoai</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaLP" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
