@model MVC_HotelBooking.Models.DichVu

<h2 class="text-center mt-4">Thêm Dịch Vụ</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="KieuDichVu"></label>
        <input asp-for="KieuDichVu" class="form-control" />
        <span asp-validation-for="KieuDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Lưu</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Vui lòng kiểm tra lỗi sau:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
