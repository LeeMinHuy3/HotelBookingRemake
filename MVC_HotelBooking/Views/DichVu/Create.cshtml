@model MVC_HotelBooking.Models.DichVu

@{
    ViewData["Title"] = "Tạo Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="KieuDichVu">Kiểu Dịch Vụ</label>
        <input type="text" class="form-control" id="KieuDichVu" name="KieuDichVu" value="@(Model?.KieuDichVu ?? "")" required />
    </div>
    <div class="form-group">
        <label for="Gia">Giá</label>
        <input type="number" class="form-control" id="Gia" name="Gia" value="@(Model?.Gia ?? 0)" required />
    </div>
    <div class="form-group">
        <label for="ImageUrl">Chọn ảnh</label>
        <input type="file" class="form-control" id="ImageUrl" name="imageFile" />
    </div>
    <button type="submit" class="btn btn-primary">Tạo mới</button>
</form>
