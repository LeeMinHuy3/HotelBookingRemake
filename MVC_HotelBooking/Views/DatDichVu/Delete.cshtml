@model MVC_HotelBooking.Models.DatDichVu

<h2>Xóa Đặt Dịch Vụ</h2>
<div class="alert alert-warning">
    <p>Bạn có chắc chắn muốn xóa Đặt Dịch Vụ này?</p>
</div>
<dl class="row">
    <dt class="col-sm-2">Mã DDV</dt>
    <dd class="col-sm-10">@Model.MaDDV</dd>

    <dt class="col-sm-2">Mã DV</dt>
    <dd class="col-sm-10">@Model.MaDV</dd>

    <dt class="col-sm-2">Số lượng</dt>
    <dd class="col-sm-10">@Model.SoLuong</dd>

    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TongTien.ToString("N0") đ</dd>

    <dt class="col-sm-2">Ngày</dt>
    <dd class="col-sm-10">@Model.Ngay.ToString("dd/MM/yyyy")</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.MaDDV" method="get">
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>