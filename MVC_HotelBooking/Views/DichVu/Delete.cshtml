@model MVC_HotelBooking.Models.DichVu

@{
    ViewData["Title"] = "Xóa dịch vụ";
}

<h2>Xác nhận xóa dịch vụ</h2>

<div class="alert alert-danger">
    Bạn có chắc chắn muốn xóa dịch vụ <strong>@Model.KieuDichVu</strong> không?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaDV" />
    <button type="submit" class="btn btn-danger">🗑️ Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
