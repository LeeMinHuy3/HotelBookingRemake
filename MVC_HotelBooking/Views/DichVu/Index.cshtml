@model IEnumerable<MVC_HotelBooking.Models.DichVu>

@{
    ViewData["Title"] = "Danh sách Dịch Vụ";
}

<h2 class="text-center mt-4">DANH SÁCH DỊCH VỤ</h2>

<div class="text-end mb-3">
    <a class="btn btn-success" asp-action="Create">+ Thêm dịch vụ</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">@item.KieuDichVu</h5>
                    <p class="card-text">Giá: @item.Gia.ToString("N0") VNĐ</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@item.MaDV" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaDV" class="btn btn-danger btn-sm">Xóa</a>
                </div>
            </div>
        </div>
    }
</div>
