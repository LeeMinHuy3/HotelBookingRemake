@model MVC_HotelBooking.Models.DatDichVu

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đặt Dịch Vụ";
    var gia = ViewBag.Gia as decimal? ?? 0;
}
@if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
{
    foreach (var error in ViewData.ModelState[string.Empty].Errors)
    {
        <div class="alert alert-danger">
            @error.ErrorMessage
        </div>
    }
}
<h2>Thêm Đặt Dịch Vụ</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="MaDV">Mã Dịch Vụ</label>
        <input type="text" class="form-control" id="MaDV" name="MaDV" value="@Model.MaDV" readonly />
    </div>

    <div class="form-group">
        <label for="MaDP">Mã Phòng</label>
        <input type="number" class="form-control" id="MaDP" name="MaDP" required />
    </div>

    <div class="form-group">
        <label for="SoLuong">Số Lượng</label>
        <input type="number" class="form-control" id="SoLuong" name="SoLuong" required />
    </div>

    <div class="form-group">
        <label for="Ngay">Ngày</label>
        <input type="date" class="form-control" id="Ngay" name="Ngay" value="@Model.Ngay.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="TongTien">Tổng Tiền</label>
        <input type="text" class="form-control" id="TongTien" name="TongTien" value="@Model.TongTien" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Thêm Đặt Dịch Vụ</button>
</form>