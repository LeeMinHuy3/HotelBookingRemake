@model IEnumerable<MVC_HotelBooking.ViewModel.PhongViewModel>

@{
    ViewData["Title"] = "Danh sách phòng";
    Layout = "_Layout_Admin";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary text-center">Danh sách phòng</h2>
        <a class="btn btn-success" href="@Url.Action("Create")">+ Thêm phòng</a>
    </div>

   
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>#</th>
                        <th>Ảnh</th>
                        <th>Tên phòng</th>
                        <th>Loại phòng</th>
                        <th>Giá</th>
                    <th>Số lượng người</th>
                        <th>Trạng thái</th>
                        <th style="width: 180px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var room in Model){
                        <tr class="text-center">
                            <td></td>
                            <td>
                                <img src="/image/@room.ImageUrl" alt="Ảnh phòng" style="width: 100px; height: 70px; object-fit: cover;" />
                            </td>
                            <td class="text-start">@room.TenPhong</td>
                            <td>@room.TenLoai</td>
                            <td>@room.GiaPhong.ToString("N0") VNĐ</td>
                        <td>@room.SoLuongNguoiToiDa</td>
                            <td>
                                @if (room.TrangThai == "Trống")
                                {
                                    <span class="badge bg-success">Trống</span>
                                }
                                else if (room.TrangThai == "Đang chờ thanh toán")
                                {
                                    <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã đặt</span>
                                }
                            </td>
                            <td>
                               
                                <a class="btn btn-outline-warning btn-sm" href="@Url.Action("Edit", new { id = room.MaP })">Sửa</a>
                                <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Delete", new { id = room.MaP })" onclick="return confirm('Bạn có chắc chắn muốn xoá phòng này?')">Xoá</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
</div>

