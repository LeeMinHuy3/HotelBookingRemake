@model IEnumerable<MVC_HotelBooking.Models.DichVu>

@{
    ViewData["Title"] = "Danh sách dịch vụ";
}

<h2>Danh sách dịch vụ</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">➕ Thêm dịch vụ</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã DV</th>
            <th>Kiểu dịch vụ</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDV</td>
                <td>@item.KieuDichVu</td>
                <td>@item.Gia.ToString("N0") VNĐ</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.MaDV })">🔍 Chi tiết</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.MaDV })">✏️ Sửa</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.MaDV })">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
