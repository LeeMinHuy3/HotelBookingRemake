@model IEnumerable<MVC_HotelBooking.Models.Phong>

@{
    ViewData["Title"] = "Danh sách phòng";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới phòng</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên phòng</th>
            <th>Loại phòng</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenPhong</td>
                <td>@item.LoaiPhongName</td>
                <td>@item.GiaPhong.ToString("N0")</td>
                <td>@item.TrangThai</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>
                    <a asp-controller="Phong" asp-action="Edit" asp-route-id="@item.MaP">Sửa</a> |
                    <a asp-controller="Phong" asp-action="Delete" asp-route-id="@item.MaP">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
