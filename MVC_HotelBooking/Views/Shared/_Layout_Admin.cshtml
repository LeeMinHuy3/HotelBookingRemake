
@{
    ViewData["Title"] = "Admin";
}
<div class="d-flex">
    <!-- Sidebar -->
    <aside class="sidebar bg-dark text-white p-4 shadow-lg d-flex flex-column justify-content-between">
        <div>
            <!-- Logo -->
            <div class="text-center mb-4">
                <img src="~/image/LuxStay (500 x 200 px).png" alt="Logo" class="img-fluid rounded-circle mb-2" style="width: 80px; height: 80px;">
                <h2 class="h5 fw-bold">🛠 <a class="nav-link dropdown-toggle">Xin chào, @Accessor.HttpContext.Session.GetString("UserName") </a></h2>
            </div>

            <!-- Menu -->
            <ul class="nav flex-column gap-2">
                <li><a class="nav-link text-white" href="#" onclick="showSection('dashboard')">📊 Dashboard</a></li>
                <li><a class="nav-link text-white" href="#" onclick="showSection('booking-management')">📅 Quản lý đặt phòng</a></li>
                <li><a class="nav-link text-white" href="@Url.Action("Index", "Phong")">🏨 Quản lý phòng</a></li>
                <li><a class="nav-link text-white" href="@Url.Action("Index", "LoaiPhong")">🏨 Quản lý loại phòng</a></li>
                <li><a class="nav-link text-white" href="#" onclick="showSection('customer-management')">👥 Quản lý khách hàng</a></li>
                <li><a class="nav-link text-white" href="@Url.Action("Index", "DichVu")">🛎️ Quản lý dịch vụ</a></li>
                <li><a class="nav-link text-white" href="#" onclick="showSection('system-settings')">⚙ Thiết lập hệ thống</a></li>
            </ul>
        </div>

        <!-- Logout -->
        <div class="text-center mt-4">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-outline-light w-100">🚪 Đăng xuất</button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow-1 p-4">
        @RenderBody()
        
    </main>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .sidebar {
        width: 250px;
        background: #343a40;
        color: white;
        min-height: 100vh;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px;
            display: block;
            border-radius: 5px;
        }

            .sidebar a:hover {
                background: #495057;
            }

    .content-section {
        display: none;
    }

    .card {
        border-radius: 10px;
        transition: 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    table th, table td {
        text-align: center;
    }
</style>
<script>


    function showSection(sectionId) {
        let sections = document.querySelectorAll('.content-section');
        sections.forEach(section => section.style.display = 'none');
            document.getElementById(sectionId).style.display = 'block';
        }
</script>