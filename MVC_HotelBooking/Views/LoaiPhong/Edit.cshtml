@model MVC_HotelBooking.ViewModel.LoaiPhongViewModel

@{
    ViewData["Title"] = "Chỉnh sửa loại phòng";
    Layout = "_Layout_Admin";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaLP" />
    <div class="form-group">
        <label for="LoaiPhongName">Tên loại phòng</label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
