@model IEnumerable<MVC_HotelBooking.Models.DichVu>

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Danh Sách Dịch Vụ";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        <a href="@Url.Action("Create", "DichVu")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo Dịch Vụ Mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Ảnh</th>
                    <th>Kiểu Dịch Vụ</th>
                    <th>Giá</th>
                    <th style="width: 180px;">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dichVu in Model)
                {
                    <tr>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(dichVu.ImageUrl))
                            {
                                <img src="@dichVu.ImageUrl" alt="Image" class="rounded" width="100" height="70" style="object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted">Không có ảnh</span>
                            }
                        </td>
                        <td class="fw-medium">@dichVu.KieuDichVu</td>
                        <td class="text-success fw-bold">@dichVu.Gia.ToString("N0") đ</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "DichVu", new { id = dichVu.MaDV })" class="btn btn-sm btn-outline-warning me-2">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a href="@Url.Action("Delete", "DichVu", new { id = dichVu.MaDV })" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>